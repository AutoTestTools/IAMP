<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meizu.iamp.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_MMS"/>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.meizu.client.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.meizu.socket.NewRoomActivity" >
        </activity>
        <activity android:name="com.meizu.socket.MyRoomActivity" >
        </activity>
        <activity
            android:name="com.meizu.bluetooth.BluetoothActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <service
            android:name="com.meizu.client.ConnectService"
            android:exported="false" >
            <intent-filter android:priority="1000" >
            </intent-filter>
        </service>

        <receiver
            android:name="com.meizu.receiver.BluetoothRequestReceiver"
            android:exported="false" >
            <intent-filter android:priority="1000" >
                <action android:name="com.meizu.bt.tab_change" />
                <action android:name="com.meizu.bt.start_server" />
                <action android:name="com.meizu.bt.start_client" />
                <action android:name="com.meizu.bt.stop_server" />
                <action android:name="com.meizu.bt.stop_client" />
                <action android:name="com.meizu.bt.send_msg" />
                <action android:name="com.meizu.bt.reply_msg" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.meizu.receiver.SocketRequestReceiver"
            android:exported="false" >
            <intent-filter android:priority="1000" >
                <action android:name="com.meizu.socket.init_socket" />
                <action android:name="com.meizu.socket.inform_state" />
                <action android:name="com.meizu.socket.create_room" />
                <action android:name="com.meizu.socket.join_room" />
                <action android:name="com.meizu.socket.quit_room" />
                <action android:name="com.meizu.socket.request.call" />
                <action android:name="com.meizu.socket.request.message" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.meizu.receiver.RespondReceiver"
            android:exported="false" >
            <intent-filter android:priority="1000" >
                <action android:name="com.meizu.socket.respond.create_room" />
                <action android:name="com.meizu.socket.respond.join_room" />
                <action android:name="com.meizu.socket.respond.call" />
                <action android:name="com.meizu.socket.respond.message" />
                <action android:name="com.meizu.socket.respond.nothing" /> 
                <action android:name="com.meizu.socket.respond.receive.sms" /> 
                <action android:name="com.meizu.socket.respond.receive.mms" /> 
            </intent-filter>
        </receiver>
    </application>

</manifest>